
html, body
	font-family $open-sans
h2
	margin 0
.navigation
	background black
	.logo p
		margin 0
		padding 0
		color white
		font-size 45px
		span
			color $axit-orange
			font-weight 300
			
	nav
		text-align right
		a
			margin-left 25px
			color white
			text-decoration none
.--center
	justify-content center
	align-items center
.divider
	width 64px
	height 3px
.white
	background $white
.orange
	background $axit-orange

h1.big-logo
	@extend .navigation .logo p
	font-size 105px
	margin 0
	padding 0
.slider
	h2,
	p
		font-family $Raleway
		text-align left
		color white
	h2
		font-weight 300
		margin-right 30px
		font-size 36px
	
// .slider
.slider
	background #f09 url('../images/bg-img1.jpg')no-repeat
	height 637px
	.container
	.row
		height 100%
.free-trial
	display flex
.trial-box
	width 350px
	border-radius 5px
	background white
	h3
		color black
		border-radius 5px 5px 0 0
		text-align center
		background #f5f5f5
		display block
		margin 0
		padding 0
		height $h = 54px
		line-height $h
	span
		color orange
	input[type="text"]
	input[type="email"]
	input[type="password"]
		width 300px
		// background olive + 20%
		border none
		color $c = #bdbdbd
		border-bottom 2px solid $c
		padding-left 15px
		outline: none
	input[type="submit"]
		width 100%
		border-radius 0 0 5px 5px
		background $axit-orange
		height $h = 54px
		line-height $h
		font-size 15px
		font-weight 600
		color white
		border none
		display block
	.input-box
		height 205px
		margin-bottom 25px
		margin-top 25px
		display flex
		justify-content center
		flex-wrap wrap

//////////////////////////
// social-box
//////////////////////////
.social-box
	font-family $open-sans
	background white
	color #cccccc
	box-shadow 0 1px 2px 1px #86878b
	.social-media
		flex 1
		@media (max-width: 600px)
			flex none
		h3
			color #292929
		p
			color #86878b
	.social-icons
		flex 2
		text-align right
		a
			color #cccccc
			text-decoration none
			margin-left 40px
			font-size 55px
			
	.icon-holder
		display flex
		padding-left 100px
		justify-content space-between

//////////////////////////
// tabs
//////////////////////////
.axit-tabs
	padding 146px 0 137px 0
	.container.row
		.tab-nav
			.tab
				background #292929
				width 100px
				height $h = 100px
				margin-bottom 1px
				text-align center
				line-height $h
				color white
				border-radius 5px
				&:hover
					background $axit-orange
				// 	@extends .active;
			.active
				background $axit-orange
				// &:hover
		.nav-view 
			flex 5
//////////////////////////
// sub list
//////////////////////////
.subl-list
	padding 100px 0
	.sub-img
		flex 1
		h3
			font-family $open-sans
			font-size 20px
	.sub-text
		flex 9
		h4
			font-family $open-sans
			font-size 14px
			margin: 0
			padding 0
	p
		color #86878b
		font-size 14px
	.some-text
		margin-bottom 30px
		&:last-child
			margin-bottom 0px
.sub-section
	margin-top 30px
	

